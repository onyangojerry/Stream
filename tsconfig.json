{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["vite/client"]
  },
  "include": ["src"],
  "exclude": [
    "src/**/*-enhanced.tsx",
    "src/**/*-responsive.tsx",
    "src/pages/InstantMeeting.tsx",
    "src/pages/ScheduleMeeting.tsx",
    "src/pages/ViewRecordings.tsx",
    "src/store/videoStore.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
