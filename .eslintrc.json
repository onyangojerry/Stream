{
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react-refresh"
  ],
  "root": true,
  "env": {
    "browser": true,
    "es2020": true
  },
  "ignorePatterns": [
    "dist",
    ".eslintrc.json",
    "vite.config.ts",
    "postcss.config.js",
    "tailwind.config.js"
  ],
  "rules": {
    "react-refresh/only-export-components": [
      "warn",
      {
        "allowConstantExport": true
      }
    ],
    "no-unused-vars": "warn",
    "no-undef": "off"
  }
}